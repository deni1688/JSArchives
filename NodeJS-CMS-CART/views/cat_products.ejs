<%- include('_layouts/header') %>
<div class="col-md-9">
    <h1><%= title %></h1>
    <div class="row">
        <% products.forEach(product => { %>
        <div class="col-md-4 d-flex align-items-strecth mt-4">
            <div class="card">
                <img class="img-fluid" src="/product_images/<%= product._id %>/<%= product.image %>"
                     alt="Card image cap">
                <div class="card-body  d-flex flex-column justify-content-end">
                    <h4 class="card-title"><%= product.title %> <span class="float-right text-success">$<%= product.price %></span>
                    </h4>

                    <a href="/products/<%= product.category %>/<%= product.slug %>"
                       class="btn btn-outline-info btn-block">View Details</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include('_layouts/sidebar') %>
<%- include('_layouts/footer') %>