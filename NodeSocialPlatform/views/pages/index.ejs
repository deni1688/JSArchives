<% include ../partials/head %>
    <% include ../partials/header %>
        <main id="main">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-sm-12 col-md-6 col-lg-5 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <!-- Form register -->
                                <form action="/login" method="POST">
                                    <p class="h1 text-center mb-4">Login</p>
                                    <% include ../partials/errors %>
                                        <div class="form-group">
                                            <i class="fa fa-envelope prefix grey-text"></i>
                                            <label>Your email</label>
                                            <input type="text" name="email" class="form-control">

                                        </div>

                                        <div class="form-group">
                                            <i class="fa fa-lock prefix grey-text"></i>
                                            <label>Your password</label>
                                            <input type="password" name="password" class="form-control">

                                        </div>

                                        <div class="text-center">
                                            <button type="submit" class="btn btn-dark  btn-block">Login</button>
                                        </div>
                                        <div class="text-center mt-3">
                                            <p>First time user? <a href="/register" class="mt-3">Register Account</a></p>
                                        </div>
                                        <hr>
                                        <div class="text-center"><a href="/auth/facebook" class="btn btn-primary btn-block"><i class="fa fa-facebook mr-2"></i> Login with Facebook</a></div>
                                        <div class="text-center"><a href="/auth/google" class="btn btn-danger btn-block mt-3"><i class="fa fa-google-plus mr-2"></i> Login with Google</a></div>
                                </form>
                                <!-- Form register -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <% include ../partials/footer %>