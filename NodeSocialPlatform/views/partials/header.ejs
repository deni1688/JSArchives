<header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <!-- Navbar brand -->
            <a class="navbar-brand" href="/home">NodeSocial</a>

            <!-- Collapse button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Links -->
                <ul class="navbar-nav ml-auto">
                    <% if(!user){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                        <% }else{ %>
                            <div id="user-data" data-user-name="<%= user.username %>" data-user-img="<%= user.userImage || 'https://api.adorable.io/avatars/120/abott@adorable.png' %>" hidden></div>
                            <li class="nav-item dropdown" id="reload">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <% if(data.totalRequests > 0) { %>
                                        <small class="text-white bg-danger p-1 req-count"><%= data.totalRequests %></small>
                                        <% } %>
                                            <i class="fa fa-bell"></i></a>
                                <div class="dropdown-menu dropdown-primary notifications p-0" aria-labelledby="navbarDropdownMenuLink">

                                    <div class="card-header text-center font-weight-bold">
                                        Friend Requests
                                    </div>
                                    <div class="card-body p-3">
                                        <% if(data.totalRequests > 0) { %>
                                            <% data.request.forEach( i => { %>
                                                <div class="chip chip-md d-block request-chip m-0 mb-3 d-flex justify-content-between" id="<%= i.userId %>">
                                                    <span>
                                                        <img src="http://placehold.it/50x50" alt="Contact Person">
                                                    <%= i.username %>
                                                </span>
                                                    <span>
                                                        <a href="#" class="accept-request" data-senderId="<%= i.userId %>" data-senderName="<%= i.username %>">
                                                            <small><i class="fa fa-check"></i> Add</small>
                                                        </a>
                                                        <a href="#" class="cancel-request" data-senderId="<%= i.userId %>">
                                                            <small><i class="fa fa-times"></i> Deny</small>
                                                        </a>
                                                    </span>
                                                </div>
                                                <% })%>
                                                    <% }else{ %>
                                                        <p class="text-center">No Requests to Show</p>
                                                        <% } %>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Hi <%= user.fullname %></a>
                                <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/home">Groups</a>
                                    <a class="dropdown-item" href="/user/<%= user._id %>/profile">Profile</a>
                                    <a class="dropdown-item" href="/dashboard">Dashboard</a>
                                    <a class="dropdown-item" href="/logout">Logout</a>
                                </div>
                            </li>
                            <% } %>
                </ul>
                <!-- Links -->
            </div>
            <!-- Collapsible content -->

        </div>
    </nav>
    <!--/.Navbar-->
</header>