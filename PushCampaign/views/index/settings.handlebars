{{> _navbar }}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            {{> _sidebar}}
        </div>
        <div class="col-md-9">
            <h1>{{ title }}</h1>
            <form action="/settings/update/" method="POST">
            <input type="hidden" name="id" value="{{settings.id}}">
                <div class="form-group">
                    <label>Brand Name</label>
                    <input type="text" class="form-control" name="brandName" value="{{settings.brandName}}">
                </div>
                <div class="form-group">
                    <label>Path to Site Logo</label>
                    <input type="text" class="form-control" name="logo" value="{{settings.pathToSiteLogo}}">
                </div>
                <div class="form-group">
                    <label class="text-muted">Active theme: {{settings.themes.active}}</label>
                    <select class="form-control" name="themeOptions">
                        {{#each settings.themes.options}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label>Add New Theme Path</label>
                    <input type="text" class="form-control" name="newThemePath">
                </div>
                <input type="submit" class="btn btn-primary" value="Update Settings">
            </form>
        </div>
    </div>
</div>
