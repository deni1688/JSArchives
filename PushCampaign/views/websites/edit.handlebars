{{> _navbar }}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            {{> _sidebar}}
        </div>
        <div class="col-md-9">
            <h1>{{ title }}</h1>
            <form method="post" action="/websites/edit/{{id}}">
            <p>Your website URL must have HTTPS protocol enabled</p>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="name" required value="{{name}}">
                </div>
                <div class="form-group">
                    <input type="url" name="url" class="form-control" placeholder="website url" required value="{{url}}">
                </div>
                <input type="submit" value="Update Website" class="btn btn-primary px-5">
            </form>
        </div>
    </div>
</div>