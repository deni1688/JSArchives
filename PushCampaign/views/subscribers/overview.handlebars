{{> _navbar }}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            {{> _sidebar}}
        </div>
        <div class="col-md-9">
            <h1>{{ title }}</h1>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Website</th>
                    <th scope="col">Medium</th>
                    <th scope="col">Date</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each data }}
                    <tr>
                        <td>{{math @index "+" 1}}</td>
                         <td>
                            {{websiteUrl}}
                        </td>
                        <td>
                            {{#if subscriber.isMobile}}
                                <i class="fa fa-mobile-phone mr-2"></i> Mobile
                            {{else}}
                                <i class="fa fa-tv mr-2"></i> Desktop
                            {{/if}}
                        </td>
                        <td>{{df subscriber.date 'fullDate' }}</td>
                        <td class="d-flex">     
                            <form action="/subscribers/update/{{subscriber.id}}" class="form-inline" method="post">
                            <input type="hidden" value="{{websiteId}}" name="websiteId">
                                <button type="submit" class="btn btn-danger mr-2 btn-sm btn-block"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>